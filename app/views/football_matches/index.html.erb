
<table>
  <thead>
    <tr>
      <th>Match Date</th>
      <th>Home Team</th>
      <th>Score Home</th>
      <th>Score Away</th>
      <th>Away Team</th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% football_matches.each do |football_match| %>
      <tr>
        <td><%= football_match.match_date.localtime.to_formatted_s(:db) %></td>
        <td><%= football_match.home_team.name %></td>
        <td><%= football_match.home_team_score || 0 %></td>
        <td><%= football_match.away_team_score || 0 %></td>
        <td><%= football_match.away_team.name %></td>
        <td><%= link_to "Place Bet" if football_match.match_date > 1.hour.ago %></td>
      </tr>
    <% end %>
  </tbody>
</table>
