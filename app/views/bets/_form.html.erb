<%= form_for [football_match, bet] do |f| %>
  <%= f.label :home_team_score, football_match.home_team.name %>
  <%= f.number_field :home_team_score %>
  <%= f.label :away_team_score, football_match.away_team.name %>
  <%= f.number_field :away_team_score %>
  <%= f.submit 'Place Bet', class: "btn btn-default" %>
<% end %>
